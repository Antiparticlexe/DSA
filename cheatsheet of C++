/*Inheritance
class up{
    public: int a=1;

};
class down:public up{
    public: int b=2;
};
int main(){
    down d;
    cout<<"the down is "<<d.b<<endl;
    cout<<"the up is "<<d.a<<endl;
}
*/
/*Pass by value
int smthg(int num){
num += 1;
cout<<num<<endl;
num += 1;
cout<<num<<endl;
num += 1;
cout<<num<<endl;
}

int main(){
    int num;
    cin>>num;
    smthg(num);
    cout<<num;
}
//Pass by reference
int smthg(int &num){
num += 1;
cout<<num<<endl;
num += 1;
cout<<num<<endl;
num += 1;
cout<<num<<endl;
}

int main(){
    int num;
    cin>>num;
    smthg(num);
    cout<<num;
}
*/
